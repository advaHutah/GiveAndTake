<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context="com.finalproject.giveandtake.UI.userProfile.OtherUserActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/otherUser_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/otherUser_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="20dp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/fragmentMainScreen_balance_lable_text"
                android:textColor="@android:color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/otherUser_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textColor="@color/green"
                android:textSize="20dp" />

            <RatingBar
                style="?android:attr/ratingBarStyleSmall"
                android:id="@+id/otherUser_rating"
                android:minHeight="5dp"
                android:isIndicator="true"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/phoneRequestButton"
                android:text="בקש מספר טלפון"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:outlineAmbientShadowColor="@color/blue">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="רוצה לתת:"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/giveText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layoutDirection="rtl"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="תגיות:"
                            android:textColor="@color/blue" />

                        <co.lujun.androidtagview.TagContainerLayout
                            android:id="@+id/otherUser_GiveTags"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textDirection="rtl"
                            android:layoutDirection="rtl"
                            app:container_enable_drag="false"
                            app:horizontal_interval="5dp"
                            app:vertical_interval="5dp"
                            app:tag_selectable="true"
                            app:tag_clickable="true"
                            app:tag_ripple_duration="0"
                            app:tag_theme="none" />
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:outlineAmbientShadowColor="@color/blue">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layoutDirection="rtl"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="רוצה לקבל:"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/takeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text=""
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="תגיות:"
                            android:textColor="@color/blue" />

                        <co.lujun.androidtagview.TagContainerLayout
                            android:id="@+id/otherUser_TakeTags"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textDirection="rtl"
                            android:layoutDirection="rtl"
                            app:container_enable_drag="false"
                            app:horizontal_interval="5dp"
                            app:tag_clickable="true"
                            app:tag_ripple_duration="0"
                            app:tag_selectable="true"
                            app:tag_theme="none"
                            app:vertical_interval="5dp" />
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:orientation="horizontal">




                <Button
                    android:id="@+id/btn_give_session"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/button_round_take"
                    android:text="תן"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_take_session"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_round_give"
                    android:text="קח"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp" />


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
