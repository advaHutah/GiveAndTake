<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue"

    tools:context="com.finalproject.giveandtake.UI.handshakeSession.IncomingSessionRequestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/incoming_session_request_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:layout_marginBottom="20dp"
            android:text="@string/incoming_session_request_headline"
            android:textSize="30dp" />




        <LinearLayout
            android:id="@+id/incoming_session_request_description_layout"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/incoming_session_request_description_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:text="@string/incoming_session_request_description_headline"
                android:textColor="@color/blue"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/incoming_session_request_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:textColor="@android:color/black"
                android:textSize="30dp" />
        </LinearLayout>



        <TextView
            android:id="@+id/incoming_session_request_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:padding="5dp"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/incoming_session_request_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="5dp"
            android:layout_gravity="center" />





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="@string/fragmentMainScreen_balance_lable_text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/incoming_session_request_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:layout_marginBottom="40dp"
            android:textColor="@color/green"
            android:textSize="30dp" />





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layoutDirection="rtl"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_accept_session"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_round_take"
                android:text="אישור"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />
            <Button
                android:id="@+id/btn_reject_session"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_round_give"
                android:text="ביטול"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>
