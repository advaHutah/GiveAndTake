<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_give_request"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <EditText
            android:id="@+id/give_request_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:paddingStart="10dp"
            android:hint="@string/give_request_input_text"
            android:textColor="@android:color/black"
            android:background="@drawable/button_shape"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/give_request_btn"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:background="@drawable/button_shape"
        android:text="@string/request_btn"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/give_request_tags_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </GridLayout>

</LinearLayout>